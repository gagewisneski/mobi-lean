<h1>Edit a Program</h1>

<%= form_tag "/blogs/#{@blog.id}", method: :patch do %>
  <%= label_tag :title %>
  <%= text_field_tag :title, @blog.title, class:"form-control" %><br>
  <%= label_tag :text %>
  <%= text_area_tag :text, @blog.text, class:"form-control" %><br>
  <%= submit_tag 'Save' %>

<% end %>

<%= link_to 'Back', "/blogs", class:"btn btn-primary" %>